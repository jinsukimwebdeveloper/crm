@{
    ViewBag.Title = "MyProfile";
}

@model crm.ViewModel.Home.LoginHistoryViewModel
<script>
    $(document).ready(function () {
        $.ajax({
            cache: false,
            type: "GET",
            url: '@Url.Action("GetLoginHistory", "Home")',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                $.each(data, function (i, val) {
                    var row = "<tr><td>" + val.Date + "</td><td>" + val.Time + "</td><td>" +
                        val.IPAddress + "</td><td>" + val.Browser + "</td><td>" + val.Status + "</td></tr>";
                    $('#loginHistory > tbody').append(row);
                });
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert('Failed to retrieve books.');
            }
        });
    });
</script>

