<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $('#loginHistory').dataTable({
            "serverSide": true,
            "processing": true,
            "ordering": false,
            "paing": false,
            "searching": false,
            "pageLength": 10,
            "lengthMenu": [10],
            "ajax": '@Url.Action("LoginHistoryAjaxHandler", "Home")',
            "columns": [
                { "data": "Date" },
                { "data": "Time" },
                { "data": "IPAddress" },
                { "data": "Browser" },
                { "data": "Status" }
            ]
        });

        var table = $('#loginHistory').DataTable();

        $('#loginHistory').on('page.dt', function () {
            var info = table.page.info();
            var msg = info.page + ' of ' + info.pages;
            alert(msg);
        });
    });
</script>

